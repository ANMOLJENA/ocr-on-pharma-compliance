# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URI=sqlite:///ocr_compliance.db

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# OCR Service Configuration (choose one)
OCR_SERVICE=tesseract  # Options: tesseract, azure, google, aws

# Azure Computer Vision (if using Azure)
AZURE_VISION_ENDPOINT=your-azure-endpoint
AZURE_VISION_KEY=your-azure-key

# Google Cloud Vision (if using Google)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# AWS Textract (if using AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Tesseract Configuration (if using Tesseract)
TESSERACT_CMD=C:/Program Files/Tesseract-OCR/tesseract.exe  # Windows
# TESSERACT_CMD=/usr/bin/tesseract  # Linux/Mac
